float scale;
SAMPLER_2D(Texture);

struct VS_OUTPUT
{
	float4 pos : SV_POSITION;
	float4 color : COLOR0;
	float2 uv : TEXCOORD0;
};

float4 ps_main( VS_OUTPUT input ) : SV_TARGET
{
	float4 test = TEXTURE(Texture, input.uv) * scale;
    
    float maxVal = max(test.r, test.g);
    maxVal = max(maxVal, test.b);
    maxVal = max(maxVal, 1.0);
    
    test /= maxVal;
    return test;
}
